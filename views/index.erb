<h1>Enter words and define them.</h1>

<form action="/addition" method="post">
  <label for="new_word">Add a word here:</label>
  <input id="new_word" name="new_word" type="text">
  <button type="submit" class="btn-lg btn-danger">Add Word</button>
</form>

<h2>Current word list:</h2>
<% if @word_list %>
  <% @word_list.each() do |this_word|  %>
  <ul>
    <li><%= this_word.id.to_s + " : " + this_word.name %>
      <form action="/local_definition/<%= this_word.id() %>" method ="post">
        <input type="hidden" id='id' name='id' value='<%= this_word.id %>'>
        <button name="id" type="submit" value="<%= this_word.id %>">View <%= this_word.name %> Definitions</button>
      </form>
    </li>
  </ul>
  <% end %>
<% end %>
<br>
